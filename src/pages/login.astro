---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Login">
  <section data-signals:email="" data-signals:password="" class="mx-auto flex max-w-md flex-col gap-4 p-6">
    {
      import.meta.env.DEV ? (
        <div class="alert bg-secondary">
          <section>
            <p>
              Email: <code>admin@example.com</code>
            </p>
            <p>
              Password: <code>password</code>
            </p>
            <button data-on:click="$email = 'admin@example.com'; $password = 'password'" class="btn-outline w-fit">
              Login as Admin
            </button>
          </section>
        </div>
      ) : null
    }
    <div class="card w-full">
      <header>
        <h2>Login to your account</h2>
        <p>Enter your details below to login to your account</p>
      </header>
      <section>
        <form method="post" action="/api/auth/password/login" class="form grid gap-6">
          <div class="grid gap-2">
            <label for="demo-card-form-email">Email</label>
            <input data-bind="email" name="email" type="email" id="demo-card-form-email" />
          </div>
          <div class="grid gap-2">
            <div class="flex items-center gap-2">
              <label for="demo-card-form-password">Password</label>
            </div>
            <input data-bind="password" name="password" type="password" id="demo-card-form-password" />
          </div>
          <button type="submit" class="btn w-full">Login</button>
        </form>
      </section>
      <footer class="flex flex-col items-center gap-2">
        <p class="mt-4 text-center text-sm">
          Don't have an account? <a href="/register" class="underline-offset-4 hover:underline">Sign up</a>
        </p>
      </footer>
    </div>
  </section>
</Layout>
